<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="div_hor_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="div_hor_gray_margin24" parent="div_hor_gray">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="div_ver_gray">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="arrow_right">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@mipmap/ic_arrow_right</item>
    </style>

    <style name="Content_LL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Content_LL_T6" parent="Content_LL">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="Title_Sub">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/c_6</item>
    </style>

    <style name="Content_ET_W2" parent="Content_ET">
        <item name="android:layout_weight">2</item>
    </style>
    <style name="Content_ET_W3" parent="Content_ET">
        <item name="android:layout_weight">3</item>
    </style>
    <style name="Content_TV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/c_9</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Content_ET" parent="Content_TV">
        <item name="android:background">@null</item>
    </style>

</resources>